<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grade Horária • 2026.1</title>
    
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="<%= withBase('/css/style.css') %>">

    <style>
        .shift-btn.active-int { background: rgba(6, 182, 212, 0.2); border-color: rgba(6, 182, 212, 0.5); color: #fff; box-shadow: 0 0 15px rgba(6, 182, 212, 0.3); }
        .shift-btn.active-ves { background: rgba(234, 179, 8, 0.2); border-color: rgba(234, 179, 8, 0.5); color: #fff; box-shadow: 0 0 15px rgba(234, 179, 8, 0.3); }
        .filter-select { padding: 8px 12px; border-radius: 8px; border: none; background: rgba(255,255,255,0.9); color: #0f172a; font-weight: 600; cursor: pointer; outline: none; min-width: 150px; font-size: 0.9rem; }
        .filter-select:disabled { opacity: 0.6; cursor: not-allowed; }
        .aula-item { background: rgba(255,255,255,0.08); padding: 10px; border-radius: 8px; border-left: 3px solid rgba(255,255,255,0.3); transition: transform 0.2s ease, background 0.2s; }
        .aula-item:hover { background: rgba(255,255,255,0.15); transform: translateX(2px); }
        .room-badge-ead { background: #3b82f6; color: white; font-weight: 800; letter-spacing: 0.5px; box-shadow: 0 2px 5px rgba(59, 130, 246, 0.4); }
        .room-badge-physical { background: rgba(255,255,255,0.2); color: rgba(255,255,255,0.9); }
    </style>
</head>
<body>
    <div class="parallax" aria-hidden="true"><div class="layer l1"></div><div class="layer l2"></div><div class="layer l3"></div></div>
    <div class="grain" aria-hidden="true"></div>

    <main class="wrap">
        <header class="hero glass">
            <div class="hero-top">
                <div class="hero-title">
                    <img src="<%= withBase('/logo_unieuro.png') %>" alt="Logo do Unieuro" class="hero-logo">
                    <div>
                        <h1>Grade Horária dos Cursos</h1>
                        <div class="meta">
                            <%if(cursoDetalhes) { %><span class="pill"><i class="fa-solid fa-user-tie"></i> Coordenação: <%= cursoDetalhes && cursoDetalhes.coordenador ? cursoDetalhes.coordenador : 'Geral / Todos' %></span><% } %>
                            <span class="pill"><i class="fa-solid fa-calendar"></i> 2026.1</span>
                            <% if(unidadeSelecionada) { %><span class="pill"><i class="fa-solid fa-location-dot"></i> <%= unidadeSelecionada %></span><% } %>
                        </div>
                    </div>
                </div>
            </div>

            <form action="<%= withBase('/') %>" method="GET" style="margin-top: 20px;">
                <div class="glass-soft" style="padding: 15px; display: inline-flex; flex-wrap: wrap; gap: 15px; align-items: center; border-radius: 12px; border: 1px solid rgba(255,255,255,0.1);">
                    <div class="d-flex flex-column">
                        <label style="color: rgba(255,255,255,0.8); font-size: 0.75rem; margin-bottom: 4px; text-transform: uppercase;">Unidade</label>
                        <select id="unidadeSelect" name="unidade" class="filter-select" onchange="const c=document.getElementById('cursoSelect'); if(c){c.value='';} this.form.submit()">
                            <option value="">-- Selecione --</option>
                            <% unidades.forEach(u => { %>
                                <option value="<%= u.slug %>" <%= unidadeSelecionadaSlug == u.slug ? 'selected' : '' %>><%= u.nome %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="d-flex flex-column">
                        <label style="color: rgba(255,255,255,0.8); font-size: 0.75rem; margin-bottom: 4px; text-transform: uppercase;">Curso</label>
                        <select id="cursoSelect" name="curso" class="filter-select" <%= !unidadeSelecionadaSlug ? 'disabled' : '' %> onchange="this.form.submit()">
                            <% if (!unidadeSelecionadaSlug) { %>
                                <option value="">-- Selecione uma unidade primeiro --</option>
                            <% } else { %>
                                <option value="">-- Selecione --</option>
                                <% cursos.forEach(c => { %>
                                    <option value="<%= c.slug %>" <%= cursoSelecionado == c.slug ? 'selected' : '' %>><%= c.nome %></option>
                                <% }) %>
                                <% if (!cursos || cursos.length === 0) { %>
                                    <option value="" disabled>Nenhum curso disponível para a unidade</option>
                                <% } %>
                            <% } %>
                        </select>
                    </div>
                </div>
            </form>

            <% if (!deveSelecionarFiltros && turnos && turnos.length > 0) { %>
                <div class="controls glass-soft" role="tablist" style="margin-top: 15px;">
                    <% turnos.forEach((turno, index) => { %>
                        <button class="shift-btn <%= index === 0 ? 'active-' + (turno.slug || 'gen').substring(0,3) : '' %>" id="btn-<%= turno.slug %>" onclick="showShift('<%= turno.slug %>')">
                            <i class="fa-solid <%= turno.icone %>"></i> <%= turno.nome %>
                        </button>
                    <% }) %>
                </div>
            <% } %>
        </header>

        <% if (deveSelecionarFiltros) { %>
            <section class="selection-required glass">
                <div class="selection-required-icon"><i class="fa-solid fa-filter-circle-xmark"></i></div>
                <h2>Selecione Unidade e Curso</h2>
                <p>Para consultar sua grade horária, selecione primeiro a <strong>unidade</strong> e o <strong>curso</strong> nos filtros acima.</p>
            </section>
        <% } %>

        <% if (!deveSelecionarFiltros && turnos && turnos.length > 0) { %>
            <% turnos.forEach((turno, index) => { %>
                <section id="<%= turno.slug %>" class="shift-container <%= turno.tema_class %> <%= index === 0 ? 'active' : '' %>">
                    <% const turmasDoTurno = turmas.filter(t => t.turno === turno.slug); %>
                    <% if (turmasDoTurno.length === 0) { %>
                        <div class="glass" style="padding: 40px; text-align: center; margin-top: 20px; color: rgba(255,255,255,0.7);">
                            <i class="fa-solid fa-ghost fa-2x mb-3"></i><br>Nenhuma turma encontrada.
                        </div>
                    <% } %>

                    <% turmasDoTurno.forEach(turma => { %>
                        <article class="class-infographic-card glass">
                            <div class="infographic-header">
                                <div class="class-ident">
                                    <div class="class-icon-box" style="background: var(--<%= (turno.slug || 'gen').substring(0,3) %>-gradient, linear-gradient(135deg, #64748b, #94a3b8));">
                                        <i class="fa-solid fa-graduation-cap"></i>
                                    </div>
                                    <div>
                                        <div class="class-title"><%= turma.nome %></div>
                                        <div class="class-semesters">
                                            <i class="fa-solid fa-layer-group"></i> Semestre: <%= turma.semestre || 'Geral' %>
                                            <span style="opacity: 0.6; margin-left: 8px;">| <i class="fa-solid fa-map-pin"></i> <%= turma.unidade %></span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="weekly-load">
                                    <% 
                                        const diasCount = turma.dias.length; 
                                        const porcentagem = Math.min((diasCount / 5) * 100, 100);
                                        let corBarra = '#3b82f6'; 
                                        if(diasCount >= 3) corBarra = '#fbbf24'; 
                                        if(diasCount >= 5) corBarra = '#22c55e'; 
                                    %>
                                    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 4px;">
                                        <span class="load-label" style="margin-right: 8px;">Aulas na Semana</span>
                                        <span style="font-size: 0.8rem; font-weight: 700; color: rgba(255,255,255,0.9);"><%= diasCount %>/5</span>
                                    </div>
                                    <div class="load-bar" style="background: rgba(255,255,255,0.1); height: 6px; border-radius: 4px; overflow: hidden;">
                                        <div class="load-fill" style="width: <%= porcentagem %>%; background-color: <%= corBarra %>; height: 100%; transition: width 0.5s ease;"></div>
                                    </div>
                                </div>
                                </div>

                            <div class="week-modules-grid">
                                <% turma.dias.forEach(dia => { %>
                                    <div class="day-module has-class" style="display: flex; flex-direction: column; height: 100%;">
                                        <div class="day-header" style="margin-bottom: 12px; border-bottom: 1px solid rgba(255,255,255,0.1); padding-bottom: 8px;">
                                            <% const nomesDias = {'SEG':'Segunda','TER':'Terça','QUA':'Quarta','QUI':'Quinta','SEX':'Sexta'}; %>
                                            <span style="font-weight: 800; letter-spacing: -0.5px;"><%= nomesDias[dia.dia] || dia.dia %></span>
                                            <i class="fa-solid <%= dia.icone || 'fa-calendar' %>" style="opacity: 0.7;"></i>
                                        </div>
                                        
                                        <div class="aulas-container" style="flex-grow: 1; display: flex; flex-direction: column; gap: 10px;">
                                            <% let lastAula = null; %>
                                            <% dia.aulas.forEach(aula => { %>
                                                
                                                <% if (!lastAula || lastAula.disciplina !== aula.disciplina) { %>
                                                    <div class="aula-item">
                                                        <div class="subject-name" style="font-size: 0.95rem; font-weight: 700; line-height: 1.3; margin-bottom: 8px; color: #fff;">
                                                            <%= aula.livre ? 'Sem Aula' : aula.disciplina %>
                                                        </div>
                                                        
                                                        <% if (!aula.livre) { %>
                                                            <div class="d-flex flex-wrap align-items-center" style="gap: 8px;">
                                                                
                                                                <div class="info-badge" style="margin-bottom: 2px; background: rgba(79, 70, 229, 0.25); border: 1px solid rgba(99, 102, 241, 0.3); color: #e0e7ff; padding: 5px 10px; border-radius: 6px; font-size: 0.75rem; font-weight: 600; display: inline-flex; align-items: center; gap: 6px; flex-grow: 1;">
                                                                    <% if(aula.prof) { %>
                                                                        <% const cleanName = aula.prof.replace(/(Prof\.|Profa\.|Dr\.|Dra\.|Me\.|Ma\.)\s*/gi, '').trim(); %>
                                                                        <i class="fa-solid fa-chalkboard-user" style="opacity: 0.8;"></i> 
                                                                        <span style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;"><%= cleanName %></span>
                                                                    <% } else { %>
                                                                        <span style="opacity:0.5;">-</span>
                                                                    <% } %>
                                                                </div>

                                                                <% if (aula.sala) { %>
                                                                    <div class="info-badge" style="background: rgba(255, 255, 255, 0.15); border: 1px solid rgba(255, 255, 255, 0.1); color: #f1f5f9; padding: 5px 10px; border-radius: 6px; font-size: 0.75rem; font-weight: 600; display: inline-flex; align-items: center; gap: 6px; min-width: fit-content;">
                                                                        <% if (aula.sala.includes('EAD')) { %>
                                                                            <i class="fa-solid fa-wifi" style="opacity: 0.8;"></i> <%= aula.sala %>
                                                                        <% } else { %>
                                                                            <i class="fa-solid fa-door-open" style="opacity: 0.8;"></i> <%= aula.sala %>
                                                                        <% } %>
                                                                    </div>
                                                                <% } %>

                                                            </div>
                                                        <% } %>
                                                    </div>
                                                <% } %>
                                                
                                                <% lastAula = aula; %>
                                            <% }) %>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        </article>
                    <% }) %>
                </section>
            <% }) %>
        <% } %>
        <footer class="glass">
            <div class="footer-grid">
                <div>
                    <div class="footer-brand-row">
                        <img src="<%= withBase('/logo_nuted.png') %>" alt="Logo do NUTED" class="footer-logo">
                        <div class="footer-title"><i class="fa-solid fa-graduation-cap"></i> Grade Horária - Unieuro</div>
                    </div>
                    <div class="footer-small">
                        Este material é informativo e pode sofrer ajustes conforme calendário acadêmico e alocação docente.
                    </div>
                </div>
            </div>
        </footer>
    </main>

    <script>
        function showShift(shiftSlug) {
            document.querySelectorAll(".shift-container").forEach(el => el.classList.remove("active"));
            const btns = document.querySelectorAll(".shift-btn");
            btns.forEach(btn => {
                const classes = btn.className.split(" ").filter(c => !c.startsWith("active-"));
                btn.className = classes.join(" ");
            });
            const target = document.getElementById(shiftSlug);
            if(target) target.classList.add("active");
            const activeBtn = document.getElementById("btn-" + shiftSlug);
            if(activeBtn && shiftSlug) {
                const prefix = shiftSlug.substring(0, 3);
                activeBtn.classList.add("active-" + prefix);
            }
        }
    
        (function initParallaxBackground() {
            const root = document.documentElement;
            const media = window.matchMedia("(prefers-reduced-motion: reduce)");
            const coarsePointer = window.matchMedia("(pointer: coarse)").matches;
            const saveData = navigator.connection && navigator.connection.saveData;
            const lowCpu = navigator.hardwareConcurrency && navigator.hardwareConcurrency <= 4;

            if (media.matches) {
                return;
            }

            if (coarsePointer || saveData || lowCpu) {
                root.classList.add("parallax-lite");
            }

            let ticking = false;
            let pointerX = 0;
            let lastY = -1;
            let lastPX = 999;

            const update = () => {
                const scrollY = window.scrollY || window.pageYOffset || 0;
                const cappedY = Math.min(scrollY, 1800);
                const py = Math.round(cappedY * -0.6);

                if (py !== lastY) {
                    root.style.setProperty("--p1", `${py}px`);
                    root.style.setProperty("--p2", `${py}px`);
                    root.style.setProperty("--p3", `${py}px`);
                    lastY = py;
                }

                if (!root.classList.contains("parallax-lite")) {
                    const px = Math.round(pointerX * 8);
                    if (px !== lastPX) {
                        root.style.setProperty("--p1x", `${px}px`);
                        root.style.setProperty("--p2x", `${Math.round(px * 1.2)}px`);
                        root.style.setProperty("--p3x", `${Math.round(px * 1.4)}px`);
                        lastPX = px;
                    }
                }
                ticking = false;
            };

            const requestUpdate = () => {
                if (ticking) return;
                ticking = true;
                window.requestAnimationFrame(update);
            };

            const onPointerMove = (event) => {
                const x = (event.clientX / window.innerWidth) - 0.5;
                pointerX = Math.max(-0.5, Math.min(0.5, x));
                requestUpdate();
            };

            window.addEventListener("scroll", requestUpdate, { passive: true });
            if (!root.classList.contains("parallax-lite")) {
                window.addEventListener("mousemove", onPointerMove, { passive: true });
            }

            update();
        })();
    </script>
</body>
</html>

