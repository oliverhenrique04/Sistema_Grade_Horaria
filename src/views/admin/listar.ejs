<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Gerenciar <%= tabela %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body class="p-4 bg-light">
    <div class="container bg-white p-5 rounded shadow-sm">
        
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-capitalize display-6">
                <i class="fa-solid fa-list-ul text-primary"></i> <%= tabela %>
            </h1>

            <% if (tabela === 'turmas' && locals.cursosFiltro) { %>
                <form action="/admin/turmas" method="GET" class="d-flex align-items-center gap-2">
                    <input type="hidden" name="token" value="<%= token %>">
                    <select name="filtro_curso" class="form-select form-select-sm" style="width: 200px;" onchange="this.form.submit()">
                        <option value="">-- Todos os Cursos --</option>
                        <% cursosFiltro.forEach(c => { %>
                            <option value="<%= c.id %>" <%= (typeof filtroAtual !== 'undefined' && filtroAtual == c.id) ? 'selected' : '' %>><%= c.nome %></option>
                        <% }) %>
                    </select>
                    <% if(typeof filtroAtual !== 'undefined' && filtroAtual) { %>
                        <a href="/admin/turmas?token=<%= token %>" class="btn btn-sm btn-outline-secondary">X</a>
                    <% } %>
                </form>
            <% } %>

            <div>
                <a href="/admin?token=<%= token %>" class="btn btn-outline-secondary me-2">Voltar</a>
                <% if (usuarioLogado.tipo !== 'nap') { %>
                    <a href="/admin/<%= tabela %>/novo?token=<%= token %>" class="btn btn-primary">Novo Registro</a>
                <% } %>
            </div>
        </div>

        <% if (itens.length === 0) { %>
            <div class="alert alert-info">Nenhum registro encontrado.</div>
        <% } else { %>
            <div class="table-responsive">
                <table class="table table-hover align-middle border">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 50px;">ID</th>
                            <th>Detalhes</th>
                            <th class="text-end" style="width: 250px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% itens.forEach(item => { %>
                        <tr>
                            <td class="fw-bold text-muted">#<%= item.id %></td>
                            <td>
                                <span class="fw-bold fs-5"><%= item.nome || item.descricao %></span>
                                <% if (item.unidade) { %>
                                    <span class="badge bg-primary ms-2"><%= item.unidade %></span>
                                <% } %>
                            </td>
                            <td class="text-end">
                                <% if (tabela === 'turmas') { %>
                                    <a href="/admin/turmas/<%= item.id %>/grade?token=<%= token %>" class="btn btn-sm btn-warning me-1">
                                        <i class="fa-solid fa-table"></i> <%= usuarioLogado.tipo === 'nap' ? 'Definir Salas' : 'Grade' %>
                                    </a>
                                <% } %>
                                <% if (usuarioLogado.tipo !== 'nap') { %>
                                    <a href="/admin/<%= tabela %>/editar/<%= item.id %>?token=<%= token %>" class="btn btn-sm btn-info me-1 text-white"><i class="fa-solid fa-pen"></i></a>
                                    <form action="/admin/<%= tabela %>/excluir/<%= item.id %>?token=<%= token %>" method="POST" style="display:inline;" onsubmit="return confirm('Excluir?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger"><i class="fa-solid fa-trash"></i></button>
                                    </form>
                                <% } %>
                            </td>
                        </tr>
                        <% }) %> 
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>
</body>
</html>