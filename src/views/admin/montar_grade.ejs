<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Grade - <%= turma.nome %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-light p-4">
    <div class="container bg-white p-5 rounded shadow">
        
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="text-primary"><%= turma.nome %> <small class="text-muted h6">(<%= turma.unidade %>)</small></h2>
                <p class="text-muted">
                    <% if(usuarioLogado.tipo === 'nap') { %>
                        Modo NAP: Defina as salas.
                    <% } else { %>
                        Adicione disciplinas e professores.
                    <% } %>
                </p>
            </div>
            <a href="/admin/turmas?token=<%= token %>" class="btn btn-secondary">Voltar</a>
        </div>

        <div class="row">
            <% if(usuarioLogado.tipo !== 'nap') { %>
                <div class="col-md-4">
                    <div class="card bg-light border-0">
                        <div class="card-body">
                            <h5 class="card-title mb-3">Adicionar Aula</h5>
                            <form action="/admin/turmas/<%= turma.id %>/grade/salvar?token=<%= token %>" method="POST">
                                <div class="mb-3">
                                    <label class="fw-bold">Dia</label>
                                    <select name="dia_semana" class="form-select" required>
                                        <option value="SEG">Segunda</option>
                                        <option value="TER">Terça</option>
                                        <option value="QUA">Quarta</option>
                                        <option value="QUI">Quinta</option>
                                        <option value="SEX">Sexta</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label class="fw-bold">Disciplina</label>
                                    <select name="disciplina_id" class="form-select" required>
                                        <% disciplinas.forEach(d => { %><option value="<%= d.id %>"><%= d.nome %></option><% }) %>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label class="fw-bold">Professor</label>
                                    <select name="professor_id" class="form-select" required>
                                        <% professores.forEach(p => { %><option value="<%= p.id %>"><%= p.nome %></option><% }) %>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label class="fw-bold">Sala (Opcional)</label>
                                    <input type="text" name="sala" class="form-control">
                                </div>
                                <button type="submit" class="btn btn-success w-100">+ Adicionar</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% } %>

            <div class="<%= usuarioLogado.tipo === 'nap' ? 'col-12' : 'col-md-8' %>">
                <table class="table table-bordered align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Dia</th>
                            <th>Disciplina</th>
                            <th>Professor</th>
                            <th>Sala</th>
                            <% if(usuarioLogado.tipo !== 'nap') { %><th>Ação</th><% } %>
                        </tr>
                    </thead>
                    <tbody>
                        <% grade.forEach(item => { %>
                            <tr>
                                <td class="fw-bold text-center"><%= item.dia_semana %></td>
                                <td><%= item.disciplina %></td>
                                <td><%= item.professor %></td>
                                <td>
                                    <% if(usuarioLogado.tipo === 'nap') { %>
                                        <form action="/admin/turmas/<%= turma.id %>/grade/item/<%= item.id %>/sala?token=<%= token %>" method="POST" class="d-flex gap-2">
                                            <input type="text" name="sala" class="form-control form-control-sm" value="<%= item.sala || '' %>">
                                            <button type="submit" class="btn btn-sm btn-primary"><i class="fa-solid fa-check"></i></button>
                                        </form>
                                    <% } else { %>
                                        <span class="badge bg-secondary"><%= item.sala || '-' %></span>
                                    <% } %>
                                </td>
                                <% if(usuarioLogado.tipo !== 'nap') { %>
                                    <td class="text-center">
                                        <a href="/admin/turmas/<%= turma.id %>/grade/remover/<%= item.id %>?token=<%= token %>" class="btn btn-sm btn-outline-danger">X</a>
                                    </td>
                                <% } %>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>